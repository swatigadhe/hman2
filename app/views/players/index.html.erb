<h1>Hangman!</h1>

<table>
  <tr>
    <th>Game Number</th>
    <th>Player Name</th>
    <th>Status</th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.id %></td>
    <td><%= player.name %></td>
    <td><%= player.status %></td>
    <td>&nbsp&nbsp&nbsp<%= link_to 'Destroy', player,   method: :delete, data: { confirm: 'Are you sure?' } , :class => "delete-link"%><br></td>
  </tr>
<% end %>
</table>

<br />

<em><%= link_to 'New Game', new_player_path,:class => "delete-link" %></em>
